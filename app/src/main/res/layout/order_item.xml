<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

    <TextView
            android:id="@+id/order_item_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Created"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />
    <TextView
            android:id="@+id/order_item_amount"
            android:text="amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_item_created"
            android:layout_toLeftOf="@+id/order_item_status"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <TextView
            android:text="Cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_item_cost" android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:textColor="@android:color/holo_green_dark" android:textStyle="bold"
            android:layout_toRightOf="@+id/order_item_created"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_above="@+id/order_item_amount"/>
    <TextView
            android:text="status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_item_status" android:textColor="@android:color/holo_blue_dark"
            android:layout_alignLeft="@+id/order_item_cost"
            android:layout_alignStart="@+id/order_item_cost" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_below="@+id/order_item_created"/>

</RelativeLayout>