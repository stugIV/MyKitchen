<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">
    <TextView
            android:id="@+id/queue_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Name"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />
    <TextView
            android:text="Due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/queue_item_due"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/queue_item_name"
            android:layout_toEndOf="@+id/queue_item_name" android:layout_alignBottom="@+id/queue_item_name"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

</RelativeLayout>